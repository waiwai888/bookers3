<%= render 'users/list', user: current_user, book: @newbook %>
<h1>Books</h1>
<div class="row">
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :user_image, :fill, 60, 60, fallback: "noimage.png" %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>