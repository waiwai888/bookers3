<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <th>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :user_image, :fill, 60, 60, fallback: "noimage.png", size:'100x100' %>
            <% end %>
          </th>
          <th><%= link_to @user.name, user_path(@user.id) %></th>
          <th><%= link_to @book.title, book_path(@book.id) %></th>
          <th><%= @book.body %></th>
          <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_1834" %></th>
          <th><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_1834" %></th>
        </tr>
      </table>
      </div>